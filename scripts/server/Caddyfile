{$HOST} {
    root * /srv
    handle_path /apps/nwt/* {
        reverse_proxy shinyapp:3838
    }
    file_server browse
    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
    }
    log {
        output file /var/log/caddy/access.log
    }
}
